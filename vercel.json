{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
        {
            "source": "/_nuxt/image",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=2678400, must-revalidate"
                },
                {
                    "key": "CDN-Cache-Control",
                    "value": "public, max-age=2678400"
                },
                {
                    "key": "Vercel-CDN-Cache-Control",
                    "value": "public, max-age=2678400"
                }
            ]
        }
    ],
    "crons": [
        {
            "path": "/api/admin/job/report",
            "schedule": "0 22 * * *"
        },
        {
            "path": "/api/admin/job/cleanup",
            "schedule": "0 22 * * *"
        }
    ],
    "redirects": [
        {
            "source": "/edit",
            "destination": "/compose",
            "permanent": true
        }
    ]
}
